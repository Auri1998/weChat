<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.pyquan.publishInfo">

    <TextView android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="取消"
        android:textSize="20sp"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="发表文字"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView android:id="@+id/publish"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="发表"
        android:textSize="20sp"
        android:textColor="@android:color/holo_green_light"
        android:layout_alignParentEnd="true"/>
    <TextView android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="15sp"
        android:layout_below="@+id/cancel"/>
    <TextView android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="所在位置"
        android:textSize="20sp"
        android:layout_below="@+id/input"/>
    <TextView android:id="@+id/permission"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="谁可以看"
        android:textSize="20sp"
        android:layout_below="@+id/location"/>
    <TextView android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="提醒谁看"
        android:textSize="20sp"
        android:layout_below="@+id/permission"/>


</RelativeLayout>
